{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dev Server",
      "type": "process",
      "command": "npm",
      "args": ["run", "dev"],
      "windows": {
        "command": "npm.cmd"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": [
          {
            "regexp": "^([^\\s].*?):(\\d+):(\\d+):\\s*(error|warning)\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "vite v\\d",
          "endsPattern": "ready in"
        }
      }
    }
  ]
}
