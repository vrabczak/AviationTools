{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Angular Dev Server",
      "type": "process",
      "command": "npm",
      "args": ["start"],
      "windows": {
        "command": "npm.cmd"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "angular",
        "pattern": [
          {
            "regexp": "^([^\\s].*?):(\\d+):(\\d+):\\s*(error|warning)\\s*(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Angular Live Development Server",
          "endsPattern": "Compiled successfully"
        }
      }
    },
    {
      "label": "ng test (no watch)",
      "type": "shell",
      "command": "npx",
      "windows": {
        "command": "npx.cmd"
      },
      "args": ["ng", "test", "--watch=false"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
